{
  "variables": {
    "my_var": "centos-hyperv",
    "hyperv_switch": "Default Switch"
  },
  
  "builders": [
    {
      "type": "hyperv-iso",
      "generation": "2",
      "enable_secure_boot": "false",
      "switch_name": "{{user `hyperv_switch`}}",
      "name": "{{user `my_var`}}",
      "vm_name": "{{user `my_var`}}",
      "guest_additions_mode": "disabled",
      "iso_url": "../local-data/centos7.iso",
      "http_directory": "./boot",
      "iso_checksum_type": "md5",
      "iso_checksum": "5848F2FD31C7ACF3811AD88EACA6F4AA",
      "cpu": "2",
      "ram_size": "1024",
      "disk_size": "8192",
      "communicator": "ssh",
      "ssh_username": "packer",
      "ssh_password": "bogus",
      "boot_wait": "10s",
      "boot_command": [
        "c  setparams 'kickstart' <enter>",
        "linuxefi /images/pxeboot/vmlinuz inst.stage2=hd:LABEL=CentOS\\x207\\x20x\\86_64",
          " inst.ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter>",
        "initrdefi /images/pxeboot/initrd.img<enter>",
        "boot<enter>"
      ],
      "shutdown_command": "shutdown -h now",
      "ssh_timeout": "4h"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "echo Hello World!!!",
        "date +%Y-%m-%d %H:%M:%s"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant"
    }
  ]
}
